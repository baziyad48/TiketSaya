<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketSuccess"
    android:background="@color/backgroundWhite">

    <ImageView
        android:id="@+id/ticket_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_success_ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mregular"
        android:text="Enjoy Your Trip!"
        android:textColor="@color/textBlack"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticket_image" />

    <TextView
        android:id="@+id/ticket_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/mlight"
        android:text="You have successfully purchased\nticket and happy vacation"
        android:textAlignment="center"
        android:textColor="@color/textGrey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticket_title" />

    <Button
        android:id="@+id/btn_ticket"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_blue"
        android:fontFamily="@font/mmedium"
        android:text="View Tickets"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticket_subtitle" />

    <Button
        android:id="@+id/btn_dashboard"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_white"
        android:fontFamily="@font/mmedium"
        android:text="My Dashboard"
        android:textColor="@color/textGrey"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ticket" />

</androidx.constraintlayout.widget.ConstraintLayout>